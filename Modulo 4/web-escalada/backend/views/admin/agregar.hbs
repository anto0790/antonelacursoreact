
<div class="containerAgregar">
    <h4>Agregar una nueva novedad</h4>
    <form action="/admin/novedades/agregar" method="post">
        <div class="row mb-3"> 
            <div class="col-sm-10">
            <input type="text" class="form-control" id="inputEmail3" placeholder="titulo" name="titulo">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="subtitulo" name="subtitulo">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="cuerpo" name="cuerpo">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Agregar</button>
    </form>
    {{#if error}}
        <p> {{message}} </p>
    {{/if}}
  </div>