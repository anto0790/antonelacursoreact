<div class="containerAgregar">
    <a class="btn btn-success" href="/admin/sectores"><i></i>Volver</a>
    <h4 class="colorDetalle">Modificar sector</h4>
    <form action="/admin/sectores/modificarSector" method="post">
        <input type="hidden" value="{{sector.id}}" name="id">
        <div class="row mb-3"> 
            <div class="col-sm-10">
            <input type="text" class="form-control" id="inputEmail3" value="{{sector.titulo}}" name="titulo">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-10">
            <textarea class="form-control" name="cuerpo"> {{sector.cuerpo}} </textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Modificar</button>
    </form>
    {{#if error}}
        <p> {{message}} </p>
    {{/if}}
  </div>