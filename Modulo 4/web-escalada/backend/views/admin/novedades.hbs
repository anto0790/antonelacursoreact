<div class="container" style="margin-top: 50px;">
  <div class="row">
    <p class="text-right">hola {{usuario}} <a class="btn btn-danger" href="/admin/login/logout">cerrar sesion <i
          class="fas fa-sign-out-alt"></i></a></p>
  </div>
  <a class="btn btn-success" href="/admin/inicio"><i></i>Volver</a>
  <div class="row">
    <div class="col-7 text-end">
      <h3 class="colorDetalle">Listado de novedades</h3>
    </div>
    <div class="col-2 text-right">
      <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-plus"></i>Nuevo</a>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Imagen</th>
            <th scope="col" class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
          <tr>
            <th scope="row"> {{id}} </th>
            <td> {{titulo}} </td>
            <td> {{{imagen}}} </td>
            <td class="text-center">
              <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-sm btn-secondary">
                <i class="fa fa-pencil"></i>
              </a>
              <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-sm btn-secondary">
                <i class="fa fa-trash"></i> 
              </a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>