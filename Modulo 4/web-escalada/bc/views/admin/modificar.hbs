<div class="containerAgregar">
    <a class="btn btn-success" href="/admin/novedades"><i></i>Volver</a>
    <h4 class="colorDetalle">Modificar novedad</h4>
    <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
        <input type="hidden" value="{{novedad.id}}" name="id">
        <div class="row mb-3">
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputEmail3" value="{{novedad.titulo}}" name="titulo">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-10">
                <input type="text" class="form-control" value="{{novedad.subtitulo}}" name="subtitulo">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-10">
                <textarea class="form-control" name="cuerpo"> {{novedad.cuerpo}} </textarea>
            </div>
        </div>
        <p>
            <div class="row mb-3">
                <label class="colorDetalle">Imagen: <input type="file" name="imagen" id="imagen"/></label>
            </div>
            </p>
        <p>
            <div class="row mb-3">
                <label class="colorDetalle"><input type="checkbox" name="img_delete" id="img_delete" value="1">
                    Eliminar imagen? </label>
                <input type="hidden" name="img_original" value="{{novedad.img_id}}">
            </div>
        </p>
        <button type="submit" class="btn btn-primary">Modificar</button>
    </form>
    {{#if error}}
    <p> {{message}} </p>
    {{/if}}
</div>